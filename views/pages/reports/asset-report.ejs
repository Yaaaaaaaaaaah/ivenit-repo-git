<%- include('../../partials/header', { title: 'Laporan Aset' }) %>

<div class="alert alert-primary d-flex align-items-center alert-dismissible fade show small rounded-pill px-3 py-2" role="alert"> <i class="bi bi-info-circle-fill me-2"></i>
  <div>
    Pilih filter **Departemen** (Laporan PC/Laptop) atau **Lokasi** (Laporan Non-PC).
  </div>
   <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert" aria-label="Close"></button> </div>


<div class="row g-3">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-primary-subtle text-primary py-2">
                <h6 class="mb-0 fw-semibold"><i class="bi bi-building me-1"></i>Laporan PC per Departemen</h6>
            </div>
            <div class="card-body py-3">
                <form action="/reports" method="GET">
                    <div class="input-group input-group-sm">
                         <label class="input-group-text" for="department_id"><i class="bi bi-filter-left"></i></label>
                        <select name="department_id" id="department_id" class="form-select" required onchange="this.form.submit()">
                            <option value="">-- Pilih Departemen --</option>
                            <% departments.forEach(dept => { %>
                                <option value="<%= dept.id %>" <%= (selectedDepartmentId == dept.id) ? 'selected' : '' %>><%= dept.name %></option>
                            <% }) %>
                        </select>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
         <div class="card shadow-sm">
             <div class="card-header bg-info-subtle text-info-emphasis py-2">
                 <h6 class="mb-0 fw-semibold"><i class="bi bi-geo-alt-fill me-1"></i>Laporan Aset per Lokasi</h6>
            </div>
            <div class="card-body py-3">
                <form action="/reports" method="GET">
                    <div class="input-group input-group-sm">
                         <label class="input-group-text" for="location_id"><i class="bi bi-filter-left"></i></label>
                        <select name="location_id" id="location_id" class="form-select" required onchange="this.form.submit()">
                            <option value="">-- Pilih Lokasi --</option>
                             <% locations.forEach(loc => { %>
                                <option value="<%= loc.id %>" <%= (selectedLocationId == loc.id) ? 'selected' : '' %>><%= loc.name %></option>
                            <% }) %>
                        </select>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="card shadow-sm mt-4">
    <div class="card-header bg-white border-bottom-0 py-3">
        <h5 class="mb-0 fw-bold text-primary-emphasis"><i class="bi bi-file-earmark-text me-2"></i>Hasil Laporan: <%= reportTitle || '...' %></h5>
    </div>
    
    <div class="card-body p-0">
        
        <% if (items && items.length > 0) { %>
             <div class="table-responsive">
                <table class="table table-striped table-hover table-sm mb-0 small">
                    <thead class="table-light sticky-top">
                        <tr>
                            <th class="ps-3">No.</th>
                            <th>Nama Perangkat</th>
                            <th>Merk</th>
                            <th>Model</th>
                            <th>Kategori</th>
                            <th>PIC</th>
                            <th>Tanggal Beli</th>
                            <th>Umur Aset</th>
                            <th>Garansi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% items.forEach((item, index) => { %>
                            <tr>
                                <td class="ps-3"><%= index + 1 %></td>
                                <td class="fw-medium">
                                    <%= item.name %>
                                    <% if (reportType === 'department') { %>
                                        <br><span class="text-muted" style="font-size: 0.9em;"><%= item.host_pc_name %></span>
                                    <% } %>
                                </td>
                                <td><%= item.merk || '-' %></td>
                                <td><%= item.model || '-' %></td>
                                <td><span class="badge text-bg-secondary rounded-pill fw-normal"><%= item.category.name %></span></td>
                                <td><%= item.pic_name %></td>
                                <td><%= item.purchase_date ? new Date(item.purchase_date).toLocaleDateString('id-ID') : '-' %></td>
                                <td class="fw-medium"><%= item.umurAset %></td>
                                <td>
                                    <span class="badge text-bg-<%= item.statusGaransiBadge %> rounded-pill fw-normal">
                                        <%= item.statusGaransi %>
                                    </span>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else if (reportType) { %>
            <div class="text-center text-muted py-5 fst-italic small">Tidak ada data untuk "<%= reportTitle %>".</div>
        <% } else { %>
            <div class="text-center text-muted py-5 fst-italic small">Pilih filter untuk menampilkan laporan.</div>
        <% } %>
    </div>
     <% if (items && items.length > 0) { %>
     <div class="card-footer bg-light text-muted small border-top py-2">
        Menampilkan <%= items.length %> data.
     </div>
     <% } %>
</div>

<%- include('../../partials/footer') %>